<div class="hero-banner">
  <div>
    <h1>Vos Listes de Films Préférées</h1>
    <p>Organisez et partagez vos coups de cœur cinématographiques !</p>
    <%= link_to "Créer ma première liste", new_list_path, class: "btn btn-primary btn-lg mt-3" %>
  </div>
</div>

<div class="container mt-4">
  <h2 class="mb-4">Toutes vos Listes</h2>
  <div class="row">
    <% @lists.each do |list| %>
      <div class="col-12 col-md-6 col-lg-4 mb-4">
        <div class="list-card"
          <% if list.photo.attached? %>
            style="background-image: url('<%= cl_image_path list.photo.key, crop: :fill, gravity: :auto, width: 400, height: 300 %>'); background-size: cover; background-position: center;"
          <% else %>
            style="background-image: url('https://via.placeholder.com/400x300.png?text=No+Image'); background-size: cover; background-position: center;"
          <% end %>
        >
          <div style="background-color: rgba(255, 255, 255, 0.8); padding: 15px; border-radius: 8px;">
            <h3><%= link_to list.name, list_path(list), style: "color: #333; text-decoration: none;" %></h3>
            <p><%= pluralize(list.movies.count, 'film') %> en bookmark</p>
            <%= link_to "Voir la liste", list_path(list), class: "btn btn-outline-info btn-sm" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <%= link_to "Créer une nouvelle liste", new_list_path, class: "btn btn-primary mt-3" %>
</div>
